{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 460,
  "height": 400,
  "background": "rgb(205, 207, 236)",
  "config": {
    "view": {
      "stroke": null
    },
    "font": "Source Sans Pro",
    "title": {
      "font": "Playfair Display",
      "fontWeight": 700
    },
    "axis": {
      "labelFont": "Source Sans Pro",
      "titleFont": "Source Sans Pro"
    },
    "legend": {
      "labelFont": "Source Sans Pro",
      "titleFont": "Source Sans Pro"
    }
  },
  "padding": {
    "left": 0,
    "right": 0,
    "top": 0,
    "bottom": 0
  },
  "data": {
    "url": "state-co2e-emissions-per-capita.csv"
  },
  "layer": [
    {
      "mark": "area",
      "params": [
        {
          "name": "state",
          "select": {
            "type": "point",
            "fields": [
              "State"
            ]
          },
          "bind": "legend"
        }
      ],
      "encoding": {
        "x": {
          "field": "Year",
          "type": "temporal",
          "axis": {
            "domain": false,
            "format": "%Y",
            "tickSize": 0,
            "grid": false
          }
        },
        "y": {
          "aggregate": "sum",
          "field": "CO2e emissions (tonnes per capita)",
          "stack": "center",
          "axis": {
            "title": "CO2 Emissions (Tonnes per Capita)",
            "grid": false
          }
        },
        "color": {
          "field": "State",
          "scale": {
            "scheme": "category20b"
          }
        },
        "opacity": {
          "condition": {
            "param": "state",
            "value": 1
          },
          "value": 0.2
        },
        "tooltip": [
          {
            "field": "State",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Year",
            "type": "temporal",
            "title": "Year"
          },
          {
            "field": "CO2e emissions (tonnes per capita)",
            "type": "quantitative",
            "title": "CO2 Emissions (Tonnes per Capita)"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 5,
        "dy": -10,
        "fontSize": 14,
        "fontStyle": "italic",
        "fontWeight": "normal",
        "color": "darkgrey",
        "font": "Source Sans Pro"
      },
      "encoding": {
        "text": {
          "value": "Northern Territory has the highest emissions out of all the states"
        },
        "x": {
          "value": 40
        },
        "y": {
          "value": 35
        },
        "opacity": {
          "condition": {
            "test": "length(data('state_store')) == 0",
            "value": 1
          },
          "value": 0
        }
      }
    }
  ]
}