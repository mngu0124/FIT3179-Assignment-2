{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 600,
  "config": {
    "view": {
      "stroke": null
    }
  },
  "padding": {
    "left": 0,
    "top": -50,
    "right": 0,
    "bottom": 0
  },
  "projection": {
    "type": "mercator",
    "center": [
      135,
      -25
    ],
    "scale": 700,
    "clipExtent": [
      [
        10,
        50
      ],
      [
        600,
        600
      ]
    ]
  },
  "params": [
    {
      "name": "yearSelection",
      "value": 2000,
      "bind": {
        "input": "select",
        "options": [
          2000,
          2020,
          2040,
          2080
        ],
        "name": "Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {
        "sphere": true
      },
      "mark": {
        "type": "geoshape",
        "fill": "#e0f7fa",
        "stroke": "none"
      }
    },
    {
      "data": {
        "graticule": {
          "step": [
            10,
            10
          ]
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "#cccccc",
        "strokeWidth": 1
      }
    },
    {
      "data": {
        "url": "ne_110m.json",
        "format": {
          "type": "topojson",
          "feature": "ne_110m_admin_0_countries"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white"
      }
    },
    {
      "data": {
        "url": "states.geojson",
        "format": {
          "type": "json",
          "property": "features"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "none",
        "stroke": "black",
        "strokeWidth": 1
      },
      "encoding": {
        "tooltip": {
          "field": "properties.STATE_NAME",
          "type": "nominal",
          "title": "State Name"
        }
      }
    },
    {
      "data": {
        "url": "average_max_temp_weather_stations_with_coords.csv"
      },
      "mark": {
        "type": "circle",
        "tooltip": {
          "content": "data"
        }
      },
      "encoding": {
        "longitude": {
          "field": "Longitude",
          "type": "quantitative"
        },
        "latitude": {
          "field": "Latitude",
          "type": "quantitative"
        },
        "color": {
          "field": "Average_Max_Temperature",
          "type": "quantitative",
          "title": "Max Temperature (°C)",
          "scale": {
            "scheme": "reds",
            "domain": [
              20,
              50
            ]
          },
          "legend": {
            "orient": "none",
            "direction": "horizontal",
            "legendX": 50,
            "legendY": 530,
            "title": "Max Temperature (°C)",
            "symbolSize": 500,
            "columns": 10,
            "labelLimit": 200
          }
        },
        "size": {
          "value": 100
        },
        "tooltip": [
          {
            "field": "Location",
            "type": "nominal",
            "title": "Weather Station"
          },
          {
            "field": "Average_Max_Temperature",
            "type": "quantitative",
            "title": "Max Temperature (°C)",
            "format": ".1f"
          },
          {
            "field": "Year",
            "type": "quantitative",
            "title": "Year"
          }
        ]
      },
      "transform": [
        {
          "calculate": "toNumber(datum.Year)",
          "as": "Year"
        },
        {
          "filter": "datum.Year == yearSelection"
        }
      ]
    }
  ]
}